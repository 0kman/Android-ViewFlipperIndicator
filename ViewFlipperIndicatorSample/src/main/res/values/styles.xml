<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">#FF880000</item>
        <item name="android:background">#FFCCCCCC</item>
        <item name="fadeLength">1000</item>
        <item name="fadeDelay">1000</item>
    </style>

    <item name="vfiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>

    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <!--<item name="vfiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vfiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vfiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vfiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>-->
        <item name="vfiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>
</resources>
